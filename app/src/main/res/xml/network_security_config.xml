<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP to emulator host and local LAN while developing -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>  <!-- Android emulator talks to host -->
        <domain includeSubdomains="true">10.0.3.2</domain>  <!-- Genymotion, if you use it -->
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>
